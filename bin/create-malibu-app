#! /bin/sh -e

DEST="$(pwd)/$1"

EXEC_PATH="$0"
CODE_PATH="$(
  cd ..
  pwd
)"
if [ "$2" == "advanced" ]; then
  echo "Preparing malibu to be $1: advanced"
  git clone --quiet https://github.com/quintype/malibu.git $DEST
else
  echo "Preparing malibu to be $1"
  git clone --quiet https://github.com/quintype/malibu.git $DEST
fi
rm -rf $DEST/.circleci/ $DEST/lighthouserc.js $DEST/.git/

cd $DEST

npm install

echo "Created $1!"
